<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.rakshith.pickcolorfromcamera.CameraSurfaceView
            android:id="@+id/search_camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src='@{"color_drawable"}' />

        <TextView
            android:id="@+id/selectColorBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Select Pointed Colour"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/selectedColor"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="86dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/shownColor"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="86dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:background="@android:color/black" />


    </RelativeLayout>

    <data>

        <import type="com.rakshith.pickcolorfromcamera.ViewUtils" />
    </data>
</layout>
